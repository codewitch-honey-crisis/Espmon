<UserControl
    x:Class="Espmon.ScreenSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Espmon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left side: Selected/Ordered Screens -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Selected Screens (Ordered)" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,8"/>

            <ListView Grid.Row="1" Width="Auto"
                      x:Name="SelectedScreensList"
                      SelectedIndex="{x:Bind SelectedScreenIndex, Mode=TwoWay}"
                      ItemsSource="{x:Bind DeviceScreens, Mode=OneWay}"
                      SelectionChanged="SelectedScreensList_SelectionChanged"
                      SelectionMode="Single"
                      Margin="0,0,8,0">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <TextBlock Text="{x:Bind}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        Spacing="8" 
                        Margin="0,8,0,0">
                <Button Content="Move Up" 
                        Click="MoveUp_Click"/>
                <Button Content="Move Down" 
                        Click="MoveDown_Click"/>
                <Button Content="Remove" 
                        Click="Remove_Click"/>
            </StackPanel>
        </Grid>

        <!-- Middle: Add button -->
        <StackPanel Grid.Column="1" 
                    VerticalAlignment="Center" 
                    Margin="8">
            <Button Content="&lt; Add" 
                    Click="Add_Click"
                    Width="80"/>
        </StackPanel>

        <!-- Right side: Available Screens -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Available Screens" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,8"/>
            <!--SelectedIndex="{x:Bind AvailableSelectedIndex, Mode=OneWay}"
            IsItemClickEnabled="True"
            ItemClick="AvailableScreensList_ItemClick"
                    
                    -->
            <ListView Grid.Row="1" Width="Auto"
                    x:Name="AvailableScreensList"
                    ItemsSource="{x:Bind Screens, Mode=OneWay}"
                      SelectedItem="{x:Bind AvailableSelectedItem, Mode=OneWay}"
                    SelectionChanged="AvailableScreensList_SelectionChanged"
                    SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:ScreenListEntry">
                        <TextBlock Text="{x:Bind Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</UserControl>